---
import BaseLayout from '../layouts/BaseLayout.astro'
import RecentSearches from '../components/RecentSearches.astro'
import Button from '../components/Button'
---

<BaseLayout>
  <div class="max-w-3xl mx-auto">
    <section class="pt-20">
      <h2 class="max-w-xl font-bold text-4xl sm:text-6xl tracking-tight">
        TypeScript API docs <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-zinc-400 to-zinc-50"
          >on demand</span
        >
      </h2>
      <div class="pt-10">
        <form method="GET" action="/pkg-redirect" class="w-full">
          <div
            class="relative flex items-center space-x-3 overflow-hidden rounded-md border bg-zinc-900 px-3 transition focus-within:ring"
          >
            <label>
              <span class="sr-only">Search packages</span>
              <svg
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <circle cx="10" cy="10" r="7"></circle>
                <line x1="21" y1="21" x2="15" y2="15"></line>
              </svg>
            </label>
            <input
              type="text"
              id="package-input"
              class="h-16 w-full bg-transparent py-3 font-medium text-zinc-50 placeholder-zinc-500 font-mono focus:outline-none"
              name="packageName"
              placeholder="@barelyhuman/tocolor"
            />
          </div>

          <div class="pt-10 space-x-3 flex items-center">
            <Button type="submit">Generate docs</Button>
          </div>
        </form>
      </div>
    </section>
    <section class="pt-20">
      <RecentSearches />
    </section>
  </div>
  <script>
    import { createInputFocus } from '../lib/keymaps/input'
    createInputFocus('#package-input', 'Slash')
  </script>
</BaseLayout>
